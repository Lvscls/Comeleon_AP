<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css" integrity="sha384-QDSPDoVOoSWz2ypaRUidLmLYl4RyoBWI44iA5agn6jHegBxZkNqgm2eHb6yZ5bYs" crossorigin="anonymous">
	<link rel="stylesheet" href="assets/css/style.css">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">BeautyBae</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link {% if current_menu is defined and current_menu == 'accueil' %} active {% endif %}" href="/">Accueil
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if current_menu is defined and current_menu == 'presentation' %} active {% endif %}" href="/presentation">Présentation</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if current_menu is defined and current_menu == 'prestation' %} active {% endif %}" href="/prestation">Prestations</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if current_menu is defined and current_menu == 'avis' %} active {% endif %}" href="/avis">Avis</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if current_menu is defined and current_menu == 'contact' %} active {% endif %}" href="/contact">Contact</a>
						</li>
					</ul>
						{% if is_granted('ROLE_ADMIN') %}
					<div class="d-flex">
							<a href="/logout"><button class="btn btn-secondary my-2 my-sm-0" type="submit">Deconnexion</button></a>
					</div>
					{% else %}
					<div class="d-flex">
							<a href="/login"><button class="btn btn-secondary my-2 my-sm-0" type="submit">Connexion</button></a>
					</div>
					{% endif %}
				</div>
			</div>
		</nav>



		{% block body %}{% endblock %}
	</body>
<footer class="bg-light text-center text-lg-start">
  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
    © 2022 Copyright:
    <a class="text-dark" href="/">Beautybae.com</a>
  </div>
  <!-- Copyright -->
</footer>
</html>
